{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "background": "#2f2f2f",
          "foreground": "#458588",
          "leading_diamond": "\ue0b6",
          "properties": {
            "linux": "\ue712",
            "macos": "\ue711",
            "mint": "\uf30f",
            "ubuntu": "\uf31c",
            "windows": "\ue70f"
          },
          "style": "diamond",
          "template": "{{ if .WSL }}\ufb04 on {{ end }}{{ .Icon }}<#689d6a> \uf554</>",
          "type": "os"
        },
        {
          "background": "#2f2f2f",
          "foreground": "#bdae93",
          "properties": {
            "folder_icon": "\ue5ff",
            "folder_separator_icon": "<#689d6a>\ue0bb</>",
            "home_icon": "\uf7db",
            "mapped_locations": {
              "C:\\Users": "\uf007",
              "C:\\Windows": "\ue62a"
            },
            "mixed_threshold": 8,
            "style": "mixed"
          },
          "style": "diamond",
          "template": " {{ path .Path .Location }} ",
          "type": "path"
        },
        {
          "background": "#2f2f2f",
          "foreground": "#d79921",
          "foreground_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#d65d0e{{ end }}",
            "{{ if gt .Ahead 0 }}#2EC4B6{{ end }}",
            "{{ if gt .Behind 0 }}#8A4FFF{{ end }}"
          ],
          "properties": {
            "branch_icon": "\ue725 ",
            "fetch_stash_count": true,
            "fetch_status": true,
            "fetch_upstream_icon": true
          },
          "style": "diamond",
          "template": "<#689d6a>\uf554 </>{{ .UpstreamIcon }}{{ .HEAD }}{{ .BranchStatus }}{{ if .Working.Changed }}<#E84855> \uf044 {{ .Working.String }}</>{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }}<#2FDA4E> \uf046 {{ .Staging.String }}</>{{ end }}{{ if gt .StashCount 0 }} \uf692 {{ .StashCount }}{{ end }} ",
          "type": "git"
        },        
        {
          "type": "go",
          "style": "diamond",
          "background": "#2f2f2f",
          "foreground": "#b1b1b1",
          "template": "<#458588> \uFCD1 </>"
        },
        {
          "background": "#2f2f2f",
          "foreground": "#ff0000",
          "properties": {
            "always_enabled": true
          },
          "style": "diamond",
          "template": "{{ if gt .Code 0 }}<#ff0000>\uf00d</>{{ else }}<#23d18b>\uf444</>{{ end }}",
          "trailing_diamond": "\ue0b4",
          "type": "exit"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "right",
      "segments": [
        {
          "background": "#2f2f2f",
          "foreground": "#b16286",
          "leading_diamond": "\ue0b6",
          "style": "diamond",
          "template": "{{ if .SSHSession }}\uf817 {{ end }}{{ .UserName }}<#689d6a>\uf1fa</>{{ .HostName }}",
          "type": "session"
        },
        {
          "background": "#2f2f2f",
          "foreground": "#458588",
          "properties": {
            "mapped_shell_names": {}
          },
          "style": "diamond",
          "template": " <#689d6a>\uf554</> {{.Name}}",
          "type": "shell"
        },
        {
          "type": "battery",
          "style": "diamond",
          "background": "#2f2f2f",
          "foreground": "#b16286",

          "template": " <#689d6a>\uf554</> {{ if not .Error }}{{ .Icon }}{{ .Percentage }}{{ end }}",
          "properties": {
            "discharging_icon": "\uE231 ",
            "charging_icon": "\uE234 ",
            "charged_icon": "\uE22F "
          }
        },
        {
          "background": "#2f2f2f",
          "foreground": "#689d6a",
          "properties": {
            "paused_icon": "\uf8e3 ",
            "playing_icon": "\uf001 ",
            "stopped_icon": "\uf04d "
          },
          "style": "diamond",
          "template": " <#689d6a>\uf554</> {{ if ne .Status \"stopped\" }}{{ .Artist }} - <#d79921>{{ .Track }}</>{{ end }} {{ .Icon }}",
          "type": "spotify"
        },
        {
          "foreground": "#2f2f2f",
          "style": "plain",
          "template": "\ue0b4",
          "type": "text"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "#cc241d",
          "style": "plain",
          "template": "\uf982",
          "type": "root"
        },
        {
          "foreground": "#CD4277",
          "style": "plain",
          "template": "\ue36c",
          "type": "text"
        }
      ],
      "type": "prompt"
    }
  ],
  "console_title_template": "{{if .Root}}root :: {{end}}{{.Shell}} :: {{.HostName}}",
  "final_space": true,
  "version": 2
}